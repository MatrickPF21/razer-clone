generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Badge {
  id          String     @id @default(uuid())
  name        String
  displayText String
  color       BadgeColor

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("badge")
}

enum BadgeColor {
  YELLOW
  BLUE
  ORANGE
}
